{
  "name": "jira-report",
  "version": "1.0.0",
  "description": "Application de suivi de tickets JIRA - Pure HTML/JS",
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "esbuild js/app.js --bundle --minify --outfile=js/app.bundle.js --format=iife --target=es2020 --loader:.html=text",
    "build:css": "esbuild styles/index.css --bundle --minify --outfile=styles/app.bundle.css",
    "watch": "npm run watch:js & npm run watch:css",
    "watch:js": "esbuild js/app.js --bundle --outfile=js/app.bundle.js --format=iife --target=es2020 --loader:.html=text --watch",
    "watch:css": "esbuild styles/index.css --bundle --outfile=styles/app.bundle.css --watch"
  },
  "keywords": ["jira", "report", "html", "javascript"],
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.27.2"
  }
}
